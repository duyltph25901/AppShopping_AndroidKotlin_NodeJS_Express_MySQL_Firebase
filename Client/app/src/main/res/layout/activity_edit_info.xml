<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.user.activities.EditInfoActivity"
    android:orientation="vertical"
    android:padding="@dimen/_12sdp"
    android:background="@color/color_bg">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_21sdp"
        android:gravity="center"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold"
        android:textColor="@color/color_text_primary"
        android:text="Cập nhật thông tin cá nhân"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            android:textColor="@color/color_primary"
            android:text="Tên đăng nhập"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginBottom="@dimen/_21sdp"
            android:paddingHorizontal="@dimen/_12sdp"
            android:background="@drawable/bg_input"
            android:hint="..."
            android:textSize="@dimen/_14ssp"
            android:inputType="text"
            android:id="@+id/inputUserName"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            android:textColor="@color/color_primary"
            android:text="Email"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginBottom="@dimen/_21sdp"
            android:paddingHorizontal="@dimen/_12sdp"
            android:background="@drawable/bg_input"
            android:hint="..."
            android:textSize="@dimen/_14ssp"
            android:inputType="textEmailAddress"
            android:id="@+id/inputEmail"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            android:textColor="@color/color_primary"
            android:text="Số điện thoại"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginBottom="@dimen/_21sdp"
            android:paddingHorizontal="@dimen/_12sdp"
            android:background="@drawable/bg_input"
            android:hint="..."
            android:textSize="@dimen/_14ssp"
            android:inputType="phone"
            android:id="@+id/inputPhoneNumber"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            android:textColor="@color/color_primary"
            android:text="Địa chỉ"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginBottom="@dimen/_21sdp"
            android:paddingHorizontal="@dimen/_12sdp"
            android:background="@drawable/bg_input"
            android:hint="..."
            android:textSize="@dimen/_14ssp"
            android:inputType="text"
            android:id="@+id/inputAddress"/>

        <Button
            android:id="@+id/buttonSaveChange"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/bg_button_2"
            android:text="Lưu thay đổi"
            android:textAllCaps="false"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:textColor="@color/color_text_primary"
            android:elevation="@dimen/_50sdp"/>

    </LinearLayout>

</LinearLayout>
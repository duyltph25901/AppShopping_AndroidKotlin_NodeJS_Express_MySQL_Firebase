<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/itemCart">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/color_primary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_7sdp"
        android:orientation="horizontal"
        android:gravity="center|start">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageProduct"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_75sdp"
            app:riv_corner_radius="@dimen/_12sdp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginEnd="@dimen/_7sdp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product name"
                android:textStyle="bold"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/_3sdp"/>
            <TextView
                android:id="@+id/textProductDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is description"
                android:textSize="@dimen/_12ssp"
                android:textStyle="italic"
                android:layout_marginBottom="@dimen/_3sdp"/>
            <TextView
                android:id="@+id/textPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$79"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:gravity="center">

            <TextView
                android:id="@+id/textReduceProduct"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:text="-"
                android:textSize="@dimen/_24ssp"
                android:textStyle="bold"
                android:background="@drawable/bg_button_reduce"
                android:gravity="center"/>
            <TextView
                android:id="@+id/textQuantityProduct"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="1"
                android:text="79"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                android:gravity="center"/>
            <TextView
                android:id="@+id/textRiseProduct"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:text="+"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/bg_button_rise"
                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>